<Page x:Class="BugTracker.PageLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BugTracker"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageLogin">

    <Grid Background="White">
        <Canvas Margin="0,10,0,-10">
            <Label Content="BUG TRACKER" HorizontalAlignment="Center" Canvas.Top="77" Width="265" FontSize="40" Canvas.Left="262"></Label>
            <Label Content="USERNAME" Canvas.Left="228" Canvas.Top="184"></Label>
            <Label Content="PASSWORDS" Canvas.Left="228" Canvas.Top="239"></Label>
            <TextBox x:Name="TextUsername" Canvas.Left="327" Canvas.Top="190" Height="20" Width="200"></TextBox>
            <PasswordBox x:Name="TextPass" Height="20" Width="200" Canvas.Left="327" Canvas.Top="245"></PasswordBox>
            <Button Content="SIGN IN" Canvas.Left="280" Canvas.Top="315" Click="ClickSignIn"></Button>
            <Button Content="REGISTER" Canvas.Left="411" Canvas.Top="315" Click="ClickRegister"></Button>
        </Canvas>
    </Grid>
</Page>
