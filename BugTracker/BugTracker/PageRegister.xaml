<Page x:Class="BugTracker.PageRegister"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BugTracker"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageRegister">

    <Canvas Background="Wheat">
        <TextBlock Text="RESGISTER" FontSize="40" Canvas.Left="286" Canvas.Top="40" Height="54" Width="217"></TextBlock>
        <TextBlock Text="USERNAME" Canvas.Left="191" Canvas.Top="126"></TextBlock>
        <TextBlock Text="PASSWORD" Canvas.Left="191" Canvas.Top="171"></TextBlock>
        <TextBlock Text="RE TYPE PASSWORD" Canvas.Left="191" Canvas.Top="218"></TextBlock>
        <TextBox x:Name="RegisterUsername" Canvas.Left="327" Canvas.Top="129" Width="200"></TextBox>
        <PasswordBox x:Name="password1" Canvas.Left="327" Canvas.Top="171" Width="200"></PasswordBox>
        <PasswordBox x:Name="password2" Canvas.Left="327" Canvas.Top="218" Width="200"></PasswordBox>
        <Button Content="SUBMIT" Click="ClickRegisterSubmit" Canvas.Left="277" Canvas.Top="271"></Button>
        <Button Content="BACK TO LOG IN" Click="ClickPageMoveToLogin" Canvas.Left="402" Canvas.Top="271"></Button>
    </Canvas>
</Page>
